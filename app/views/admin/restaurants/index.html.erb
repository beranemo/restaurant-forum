<div class="container">

  <h1>餐廳後台</h1>
  
  <!--
  <%= render(:partial => "admin/common/tab") %>
  -->

  <div class="row">

    <div class="col-md-9">

      <div>
        <%= link_to 'New Restaurant', new_admin_restaurant_path, class: "btn btn-primary" %>
      </div>
      
      <br />

      <table class="table table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>餐廳名稱</th>
            <th>類別</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% @restaurants.each do |restaurant| %>
          <tr>
            <th scope="row"><%= restaurant.id %></th>
            <td class="table-warning"><%= restaurant.name %></td>
            
            <% if restaurant.category != nil %>
            <td>[<%= restaurant.category.name %>]</td>
            <% else %>
            <td>[尚未有分類]</td>
            <% end %>
            
            <td>
              <%= link_to admin_restaurant_path(restaurant), class: "btn btn-success btn-sm" do %>
                <span class="glyphicon glyphicon-eye-open"> 內容</span>
              <% end %>
              <%= link_to edit_admin_restaurant_path(restaurant), class: "btn btn-info btn-sm" do %>
                  <span class="glyphicon glyphicon-edit"> 編輯</span>
              <% end %>
              <%= link_to admin_restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger btn-sm" do %>
                <span class="glyphicon glyphicon-trash"> 刪除</span>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="text-center">
        <%= paginate @restaurants %>
      </div>

    </div>

  </div>
</div>
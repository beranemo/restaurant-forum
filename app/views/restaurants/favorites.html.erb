<div class="container">
  <div class="row">
   <h3>收藏 <%= @restaurant.name %> 的人</h3>
   <br />
    <% @favorites.each do |favorite| %> 
      <div class="col-md-3 col-sm-4 col-xs-6 text-center user-item">
          <!-- 可先利用 Placeholder 如 <img src="http://via.placeholder.com/128x128"> 產生圖片 -->
          <img src="http://via.placeholder.com/128x128">
          <!-- <%= image_tag(favorite.user.avatar, class: "img-rounded") %>-->
        <h4>
          <% if !favorite.user.name %>
            <%=  favorite.user.name = favorite.user.email.split('@').first %>
          <% else %>
            <%= favorite.user.name %>
          <% end %>
        </h4>
      </div>
    <% end %>
  </div>
</div>
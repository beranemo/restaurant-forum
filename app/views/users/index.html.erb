<ul>

  <% @users.each do |user| %>
    <li>
      <%= user.name %>
      <!-- 會用 POST 動作導向 http://localhost:3000/followships?following_id={user.id} -->
      <%= link_to '追蹤', followships_path(following_id: user), method: :post %>
      <%= link_to '取消追蹤', followship_path(user), method: :delete %>
    </li>
  <% end %>

</ul>